<div id="admin" class="container">
  <div class="row">
    <div class="col-md-12">

      <div class="row">
        <div class="col-md-6 col-md-offset-1">
          <h3>Admin Panel : <%= @user.profile_name %></h3>
          <%= image_tag @user.avatar.url(:thumb) %>
        </div>
        <div class="col-md-1 col-md-offset-2">
          <%= link_to 'Create a new Event', new_event_path, class: "admin btn btn-success" %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-10 col-md-offset-1">    
          <table class="table table-striped ">
            <thead>
              <tr>
                <th>Events:</th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
              </tr> 
            </thead>
            <tbody>
            
            <% current_user.events.each do |event| %>
              <tr>
                <td><%= event.event_name %></td>
                <td><%= event.event_date %></td>
                <td><%= event.venue %></td>
                <td class="<%= event.confirmed ? 'text-danger' : 'text-muted' %>">Confirmed</td>
                <td><%= link_to 'Edit', edit_event_path(event), class: "btn btn-warning btn-xs" %></td>
                <td><%= link_to 'Delete', event_path(event), class: "btn btn-danger btn-xs" ,
                                method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
