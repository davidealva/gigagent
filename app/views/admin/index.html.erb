<div id="admin" class="container">
  <div class="row">
    <div class="col-md-12">

      <div class="row">
        <div class="col-md-7">
          <h3>Admin Panel : <%= @user.profile_name %></h3>
        </div>
        <div class="col-md-3">
          <%= link_to 'Create a new Event', new_event_path, class: "btn btn-success" %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12">    
          <table class="table table-striped table-bordered">
            <tr>
              <th>Event Name</th>
              <th>Event Date</th>
              <th>Event Venue</th>
              <th></th>
              <th></th>
            </tr> 

            <% current_user.events.each do |event| %>
              <tr>
                <td><%= event.event_name %></td>
                <td><%= event.event_date %></td>
                <td><%= event.venue %></td>
                <td><%= link_to 'Edit', edit_event_path(event), class: "btn btn-warning" %></td>
                <td><%= link_to 'Delete', event_path(event), class: "btn btn-danger" ,
                                method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
